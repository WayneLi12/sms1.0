<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.app02.dao.CourseMapper">
	<select id="findAll" resultType="com.briup.app02.bean.Course">
		select * from course
	</select>
	<select id="findById" resultType="com.briup.app02.bean.Course">
		select * from course where id =
		#{id}
	</select>
	<insert id="save" parameterType="com.briup.app02.bean.Course">
		insert into course values
		(null,#{name},#{credit},#{description})
	</insert>
	<update id="update">
		update course set
		name = #{name},
		credit = #{credit},
		description = #{description}
		where id = #{id}
	</update>

	<delete id="delete">
		delete from course where id = #{id}
	</delete>

</mapper>